@{
    ViewBag.Title = "Restaurant Suggestions";
}

@model IEnumerable<Assignment4.Models.SuggestionResponse> 

<div>
    <h2>Here are the current suggestions and who they were submitted by</h2>

    <table>
        <thead>
            <tr><th>Name</th><th>Restaurant Name</th><th>Favorite Dish</th><th>Restaurant Phone Number</th></tr>
        </thead>

        <tbody>
            @foreach (Assignment4.Models.SuggestionResponse x in Model)
            {
            <tr>
                <td>@x.suggName</td>
                <td>@x.suggRest</td>
                <td>@x.suggDish</td>
                <td>@x.suggPhone</td>
            </tr>
            }
        </tbody>
    </table>
</div>
